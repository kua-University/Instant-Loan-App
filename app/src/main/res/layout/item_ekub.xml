<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:outlineProvider="bounds">

    <!-- Ekub Name -->
    <TextView
        android:id="@+id/ekubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekub Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Ekub Amount -->
    <TextView
        android:id="@+id/ekubAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: $100"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Ekub Duration -->
    <TextView
        android:id="@+id/ekubDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: 10 months"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Ekub Type -->
    <TextView
        android:id="@+id/ekubType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Monthly"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Ekub Date -->
    <TextView
        android:id="@+id/ekubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2023-12-31"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />
</LinearLayout>