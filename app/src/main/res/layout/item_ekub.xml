<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/ekubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekub Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ekubAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: 100"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ekubDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: 12 months"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ekubType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Monthly"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ekubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2023-12-31"
        android:textSize="16sp" />

</LinearLayout>